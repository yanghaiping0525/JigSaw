<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/id_jigsaw_switch_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/text_wrapper_full_shape"
        android:padding="5dp"
        android:text="切换模式"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/id_jigsaw_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/text_wrapper_full_shape"
        android:padding="5dp"
        android:text="休闲模式"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/id_jigsaw_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="0"
        android:textColor="#33cccc"
        android:textSize="20sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/id_jigsaw_reload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/text_wrapper_full_shape"
        android:gravity="center"
        android:padding="5dp"
        android:text="重新载入"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.yang.jigsaw.view.JigsawLayout
            android:id="@+id/id_jigsaw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:padding="5dp" />
    </RelativeLayout>
</RelativeLayout>
