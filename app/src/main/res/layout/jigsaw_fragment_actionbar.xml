<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#33cccc"
    android:padding="0dp">
    <TextView
        android:id="@+id/id_actionbar_music"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="歌曲"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:textStyle="bold"
        android:background="@drawable/actionbar_button_shape_left"/>
    <TextView
        android:id="@+id/id_actionbar_back"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="退出"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:textStyle="bold"
        android:background="@drawable/actionbar_button_shape_right"/>

    <TextView
        android:id="@+id/id_actionbar_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="游戏"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:textStyle="bold" />

</RelativeLayout>