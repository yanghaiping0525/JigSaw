<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="24dp"
    android:paddingRight="10dp"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/id_game_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:src="@mipmap/game_logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_statusBar_song_name"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="青春修炼手册"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/id_statusBar_singer"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="TFBoys"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/id_statusBar_previous"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/id_line_divider_first"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@mipmap/previous_gray_icon" />

    <RelativeLayout
        android:id="@+id/id_line_divider_first"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/id_statusBar_play"
        android:background="#33cccccc"
        android:paddingBottom="3dp"
        android:paddingTop="3dp" />

    <ImageButton
        android:id="@+id/id_statusBar_play"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/id_line_divider_sec"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@mipmap/pause_gray_icon_small" />

    <RelativeLayout
        android:id="@+id/id_line_divider_sec"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/id_statusBar_next"
        android:background="#33cccccc"
        android:paddingBottom="3dp"
        android:paddingTop="3dp" />

    <ImageButton
        android:id="@+id/id_statusBar_next"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@mipmap/next_gray_icon" />
</LinearLayout>