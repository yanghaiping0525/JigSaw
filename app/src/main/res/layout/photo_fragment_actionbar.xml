<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#33cccc"
    android:padding="0dp">
    <TextView
        android:id="@+id/id_actionbar_music"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="歌曲"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:background="@drawable/actionbar_button_shape_left"/>

    <TextView
        android:id="@+id/id_actionbar_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="图库"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/id_actionbar_trash"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/actionbar_button_shape_right"
        android:clickable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/delete_photo_selector"
        android:visibility="invisible" />

</RelativeLayout>