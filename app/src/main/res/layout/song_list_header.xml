<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_head_item_selector"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/text_wrapper_red_shape"
        android:gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_song_header_icon"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:layout_marginRight="10dp"
            android:src="@mipmap/random_play" />

        <TextView
            android:id="@+id/id_song_header_play_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="随机播放"
            android:textColor="@color/red"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>