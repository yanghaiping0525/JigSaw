<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:bottom="0dp" android:right="0dp" android:top="0dp" android:left="0dp" >
        <selector xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:state_pressed="true" >
                <shape android:shape="rectangle" >
                    <!-- 实心 -->
                    <solid android:color="#99cccc" />
                    <!-- 渐变 -->
                    <gradient
                        android:startColor="#99cccc"
                        android:endColor="#99cccc"
                        android:angle="0" />
                    <!-- 描边 -->
                    <stroke
                        android:width="0dp"
                        android:color="#dcdcdc" />
                    <corners android:topLeftRadius="0dp" android:bottomLeftRadius="0dp" android:bottomRightRadius="24dp" android:topRightRadius="24dp"/>
                    <size android:width="60dp" android:height="50dp"/>
                </shape>
            </item>

            <item>
                <shape android:shape="rectangle" >
                    <gradient
                        android:startColor="#33cccc"
                        android:endColor="#33cccc"
                        android:angle="0" />
                    <solid android:color="#33cccc" />
                    <stroke
                        android:width="0dp"
                        android:color="#dcdcdc" />
                    <corners android:topLeftRadius="0dp" android:bottomLeftRadius="0dp" android:bottomRightRadius="24dp" android:topRightRadius="24dp"/>
                    <size android:width="60dp" android:height="50dp"/>
                </shape>
            </item>

        </selector>
    </item>
</layer-list>